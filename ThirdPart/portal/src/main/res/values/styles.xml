    <!-- 自定义Ratingbar主题(橘黄色)(商店列表) -->
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <!-- 定义星星图片 -->
        <item name="android:progressDrawable">@drawable/ratingbar_app_shop_list</item>

        <!-- 根据自定义星星图片的大小,设置相应的值,否则可能显示不全 -->
        <item name="android:minHeight">36dp</item>

        <!-- 根据自定义星星图片的大小,设置相应的值,否则可能显示不全 -->
        <item name="android:maxHeight">36dp</item>

        <!-- 是否不允许滑动交互  -->
        <item name="android:isIndicator">true</item>
    </style>
    <!-- 自定义Ratingbar主题(橘黄色)(商店应用详情) -->
    <style name="detailRatingBar" parent="@android:style/Widget.RatingBar">
        <!-- 定义星星图片 -->
        <item name="android:progressDrawable">@drawable/ratingbar_app_shop_detail</item>

        <!-- 根据自定义星星图片d的大小,设置相应的值,否则可能显示不全 -->
        <item name="android:minHeight">36dp</item>

        <!-- 根据自定义星星图片的大小,设置相应的值,否则可能显示不全 -->
        <item name="android:maxHeight">36dp</item>

        <!-- 是否不允许滑动交互  -->
        <item name="android:isIndicator">true</item>
    </style>
    <!-- 自定义Ratingbar主题(灰色)(商店应用详情) -->
    <style name="grayRatingBar" parent="@android:style/Widget.RatingBar">
        <!-- 定义星星图片 -->
        <item name="android:progressDrawable">@drawable/ratingbar_gray_drawable</item>

        <!-- 根据自定义星星图片的大小,设置相应的值,否则可能显示不全 -->
        <item name="android:minHeight">36dp</item>

        <!-- 根据自定义星星图片的大小,设置相应的值,否则可能显示不全 -->
        <item name="android:maxHeight">36dp</item>

        <!-- 是否不允许滑动交互  -->
        <item name="android:isIndicator">true</item>
    </style>
    <!-- 自定义Ratingbar主题(商店评价) -->
    <style name="evaluationRatingBar" parent="@android:style/Widget.RatingBar">

        <item name="android:progressDrawable">@drawable/ratingbar_evaluation_drawable</item>

        <item name="android:minHeight">130px</item>

        <item name="android:maxHeight">130px</item>

    </style>
    <!-- 通讯录checkbox主题样式 -->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>


    <style name="WinDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/search_bg</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <!-- 加载进度条 -->
    <style name="progressdialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/loadingbg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 自定义应用底部导航栏的样式 -->
    <style name="tab_rb_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <!-- 去掉RadioButton 前面的小圆点 -->
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/btn_color</item>
        <item name="android:text">120sp</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:background">@null</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_color_primary_dark</item>
        <!--通知栏颜色-->
        <item name="colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="colorAccent">@color/theme_color_primary</item>
    </style>

</resources>
