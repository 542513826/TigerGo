<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="85dp"
                android:background="@drawable/bg_search_item"
                android:paddingTop="10dp">
    <!--应用图标-->
    <ImageView
        android:id="@+id/app_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/pic_shop_icon"/>
    <!--应用名字-->
    <TextView
        android:id="@+id/app_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/app_icon_iv"
        android:paddingTop="10dp"/>
    <!--应用类型-->
    <TextView
        android:id="@+id/app_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name_tv"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/app_icon_iv"
        android:textColor="#BFBFBF"
        android:textSize="12sp"/>
    <!--应用星级-->
    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/roomRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="9dp"
        android:layout_below="@+id/app_type_tv"
        android:layout_toEndOf="@+id/app_icon_iv"
        android:numStars="5"
        android:rating="3"/>
    <!--应用评论-->
    <TextView
        android:id="@+id/shop_comment_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/ratingBar"
        android:textColor="#BFBFBF"
        android:textSize="10sp"/>

    <LinearLayout
        android:id="@+id/shop_item_open"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:paddingTop="10dp">
        <!--应用状态图标-->
        <ImageView
            android:id="@+id/shop_item_open_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:src="@drawable/pic_shop_updata"/>
        <!--应用状态文字-->
        <TextView
            android:id="@+id/shop_item_open_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:textColor="#32CFFA"
            android:textSize="12sp"/>
    </LinearLayout>

</RelativeLayout>
