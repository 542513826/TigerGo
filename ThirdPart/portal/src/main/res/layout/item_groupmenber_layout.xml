<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <ImageView
        android:id="@+id/group_members_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/btn_userinfo_head"/>

    <TextView
        android:id="@+id/group_members_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/group_members_head"
        android:textColor="@color/black_textview"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/group_members_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:text="群主"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:visibility="gone"/>

    <View
        android:id="@+id/group_members_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignBottom="@+id/group_members_head"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/darkgray_v12"/>

</RelativeLayout>
