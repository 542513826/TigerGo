<?xml version="1.0" encoding="utf-8"?>
<com.bilibili.magicasakura.widgets.TintRelativeLayout
    android:background="@color/theme_color_primary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:elevation="5dp">

    <TextView
        android:id="@+id/title_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:padding="10dp"
        android:text="取消"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/title_left_img"
        android:layout_width="28dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:padding="10dp"
        android:clickable="true"
        android:src="@drawable/selector_btn_back_bg" />

    <TextView
        android:id="@+id/title_center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="TITLE"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/title_right_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dp"
        android:padding="10dp"
        android:clickable="true"
        android:src="@drawable/btn_chat_info"
 />

    <TextView
        android:id="@+id/title_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="6dp"
        android:padding="10dp"
        android:text="取消"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="20sp" />

</com.bilibili.magicasakura.widgets.TintRelativeLayout>
