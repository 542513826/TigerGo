<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitesmoke"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/file_rl"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_relativelayout_bg"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/file_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/pic_collect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/file_iv"
                android:text="@string/my_file"
                android:textColor="@color/black_v2"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:src="@drawable/pic_next" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.7dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="20dp"
            android:background="@color/darkgray_v11" />


        <RelativeLayout
            android:id="@+id/collect_rl"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_relativelayout_bg"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/collect_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/pic_file" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/collect_iv"
                android:text="@string/collect"
                android:textColor="@color/black_v2"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:src="@drawable/pic_next" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/theme_rl"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_relativelayout_bg"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/theme_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/pic_theme" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/theme_iv"
            android:text="@string/theme"
            android:textColor="@color/black_v2"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="18dp"
            android:src="@drawable/pic_next" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_rl"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_relativelayout_bg"
        android:clickable="true">

        <ImageView
            android:id="@+id/set_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/pic_set" />

        <TextView
            android:id="@+id/set_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/set_iv"
            android:text="@string/set"
            android:textColor="@color/black_v2"
            android:textSize="18sp" />

        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/set_tv"
            android:visibility="gone"
            android:background="@drawable/pic_updata_shape" />

        <ImageView
            android:id="@+id/set_point"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="18dp"
            android:src="@drawable/pic_next" />
    </RelativeLayout>
</LinearLayout>
