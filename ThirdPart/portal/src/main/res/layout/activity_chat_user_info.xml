<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <include
        android:id="@+id/include"
        layout="@layout/custom_title_useimg"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="18dp">

                <ImageView
                    android:id="@+id/userinfo_head_img"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/btn_userinfo_head" />

                <TextView
                    android:id="@+id/userinfo_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userinfo_head_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:text="张三"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="18dp">

                <ImageView
                    android:id="@+id/userinfo_add_img"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/btn_chatinfo_add" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/ontop_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/setOnTop"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <ToggleButton
                android:id="@+id/ontop_tb"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_togglebutton_bg"
                android:textOff=""
                android:textOn="" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/nodisturb_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/set_ignore_ramind"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <ToggleButton
                android:id="@+id/nodisturb_tb"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_togglebutton_bg"
                android:textOff=""
                android:textOn="" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:background="@color/white">

            <TextView
                android:id="@+id/fav_contact_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/frequent_contacts"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <ToggleButton
                android:id="@+id/fav_contact_tb"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_togglebutton_bg"
                android:textOff=""
                android:textOn="" />

        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/chat_file_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearlayout1"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_relativelayout_bg"
        android:clickable="true"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/chatfiles"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_next_pressed" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clear_chat_data_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/chat_file_rl"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_relativelayout_bg"
        android:clickable="true"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/delete_chatdistory"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

    </RelativeLayout>


</RelativeLayout>
